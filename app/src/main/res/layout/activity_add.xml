<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Add">
<RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/post_view"
    android:visibility="gone"
    tools:visibility="visible"
    android:layout_height="match_parent">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@id/post_thumbnail_view"
        android:gravity="top"
        android:id="@+id/postcap"
        android:hint="Write your caption here"
        android:padding="10dp" />

    <ImageView
        android:id="@+id/post_thumbnail_view"
        android:layout_width="90dp"
        android:layout_height="160dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/black" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_weight="1"
            android:id="@+id/cancel_post_btn"/>
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/progress_bar"
            android:visibility="gone"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post"
            android:layout_weight="1"
            android:id="@+id/submit_post_btn"/>

    </LinearLayout>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/upload_view">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/add"
            android:id="@+id/icon_add"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clik to uplod Viedo"
            android:layout_below="@id/icon_add"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    </RelativeLayout>


